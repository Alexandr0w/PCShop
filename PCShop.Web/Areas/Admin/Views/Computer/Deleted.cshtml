@using PCShop.Web.ViewModels.Admin.Computer
@model DeletedComputersListViewModel

@{
    ViewData["Title"] = "Deleted Computers";
}

<h2 class="mt-4">Deleted Computers</h2>
<hr />

@if (Model.Computers == null || !Model.Computers.Any())
{
    <div class="alert alert-info">No deleted computers found.</div>
}
else
{
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price (€)</th>
                <th>Deleted On</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var computer in Model.Computers)
            {
                <tr>
                    <td>@computer.Name</td>
                    <td>@computer.Price.ToString("F2")</td>
                    <td>@(computer.DeletedOn?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                    <td>
                        <form asp-area="Admin" asp-controller="Computer" asp-action="Restore" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@computer.Id" />
                            <button type="submit" class="btn btn-sm btn-success">
                                <i class="fas fa-undo"></i> Restore
                            </button>
                        </form>
                        <form asp-area="Admin" asp-controller="Computer" asp-action="HardDelete" method="post" class="d-inline ms-1">
                            <input type="hidden" name="id" value="@computer.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">
                                <i class="fas fa-trash-alt"></i> Delete Forever
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
