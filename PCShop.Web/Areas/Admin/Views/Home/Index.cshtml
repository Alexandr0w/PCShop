@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-warning fw-bold">Admin Dashboard</h1>
        <p class="lead text-secondary">Manage PC Shop application using the sections below:</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-lg border-0 bg-dark text-white rounded-3 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-users text-warning display-3 mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Users</h5>
                    <p class="card-text text-white">Add, edit, or remove users and assign roles.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index"
                           class="btn btn-warning fw-bold shadow-sm w-100 py-2">
                            <i class="fas fa-user-cog"></i> Go to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 bg-dark text-white rounded-3 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-box-open text-primary display-3 mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Products</h5>
                    <p class="card-text text-white">Manage deleted products.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Deleted"
                           class="btn btn-primary fw-bold shadow-sm w-100 py-2">
                            <i class="fas fa-box"></i> Go to Products
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 bg-dark text-white rounded-3 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-desktop text-danger display-3 mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Computers</h5>
                    <p class="card-text text-white">Manage deleted computers.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="Computer" asp-action="Deleted"
                           class="btn btn-danger fw-bold shadow-sm w-100 py-2">
                            <i class="fas fa-laptop"></i> Go to Computers
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
