@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center my-5">
        <h1 class="display-4 fw-bold text-gradient bg-info-subtle bg-opacity-75 text-dark p-3 rounded-3 shadow">
            Admin Dashboard
        </h1>
        <p class="lead text-secondary mt-3">
            <i class="bi bi-shield-lock-fill me-2 text-primary"></i>
            Take <span class="fw-semibold text-dark">full control</span> of the <span class="text-dark">PC Shop platform</span> — manage
            <span class="fw-semibold text-dark">users</span>, <span class="fw-semibold text-dark">products</span>, <span class="fw-semibold text-dark">computers</span>, and more from one centralized interface.
        </p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-lg border-0 bg-dark text-white rounded-3 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-users text-light display-3 mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Users</h5>
                    <p class="card-text text-white">Add, edit, or remove users and assign roles.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index"
                           class="btn btn-light fw-bold shadow-sm w-100 py-2">
                            <i class="fas fa-user-cog"></i> Go to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 bg-dark text-white rounded-3 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-box-open text-success display-3 mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Products</h5>
                    <p class="card-text text-white">Add, Edit, Delete and Restore the products.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="ProductManagement" asp-action="Manage"
                           class="btn btn-success fw-bold shadow-sm w-100 py-2">
                            <i class="fas fa-box"></i> Go to Products
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 bg-dark text-white rounded-3 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-desktop text-danger display-3 mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Computers</h5>
                    <p class="card-text text-white">Add, Edit, Delete and Restore the computers.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="ComputerManagement" asp-action="Manage"
                           class="btn btn-danger fw-bold shadow-sm w-100 py-2">
                            <i class="fas fa-laptop"></i> Go to Computers
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
