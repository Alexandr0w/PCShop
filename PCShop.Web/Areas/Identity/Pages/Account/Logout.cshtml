@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg border-0" style="max-width: 600px; margin: auto;">
        <div class="card-body py-5">

            <div class="mb-4">
                <i class="bi bi-box-arrow-right text-primary display-1"></i> 
            </div>

            <h1 class="display-4 text-primary mb-3">@ViewData["Title"]</h1>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                        Log out
                    </button>
                </form>
            }
            else
            {
                <p class="lead text-muted mb-4">
                    You have successfully logged out of the application.
                </p>

                <a href="/" class="btn btn-primary btn-lg mt-3">
                    <i class="bi bi-house-fill"></i> Return to Home
                </a>
            }

        </div>
    </div>
</div>
