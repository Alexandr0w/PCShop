@page
@model ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 p-4 text-center" style="max-width: 600px; width: 100%;">
        <h1 class="text-primary mb-3">@ViewData["Title"]</h1>
        <p class="lead text-muted">
            Please check your email for the password reset instructions.
        </p>
        <a href="/" class="btn btn-primary btn-lg mt-3">
            <i class="bi bi-house-fill"></i> Return to Home
        </a>
    </div>
</div>
