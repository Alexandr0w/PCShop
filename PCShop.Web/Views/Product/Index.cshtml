@using PCShop.Web.ViewModels.Product
@model IEnumerable<ProductIndexViewModel>

@{
    string productType = Context.Request.Query["productType"].ToString();
    Dictionary<string, string> pluralMap = new Dictionary<string, string>(StringComparer.OrdinalIgnoreCase)
    {
        ["Processor"] = "Processors",
        ["Video Card"] = "Video Cards",
        ["Motherboard"] = "Motherboards",
        ["RAM"] = "Memories (RAM)",
        ["SSD"] = "SSDs",
        ["HDD"] = "HDDs",
        ["Power Supply"] = "Power Supplies",
        ["Cooling System"] = "Cooling Systems",
        ["Case Fan"] = "Case Fans",
        ["Case"] = "Cases",
        ["Monitor"] = "Monitors",
        ["Keyboard"] = "Keyboards",
        ["Mouse"] = "Mice",
        ["Headset"] = "Headsets",
        ["Mousepad"] = "Mousepads",
        ["Speaker"] = "Speakers",
        ["Microphone"] = "Microphones",
        ["Webcam"] = "Webcams"
    };

    string heading = string.IsNullOrWhiteSpace(productType)
        ? "All Products"
        : $"All {pluralMap.GetValueOrDefault(productType, productType + "s")}";
}

@{
    ViewData["Title"] = @heading;
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@heading</h2>
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <a asp-controller="Product" asp-action="Add" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Product
        </a>
    }
</div>
<hr />

<div class="row text-center">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@product.Name">
                }
                else
                {
                    <img src="~/images/no-image.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Category: @product.ProductType</p>
                    <p class="card-text"><strong>Price:</strong> @product.Price €</p>

                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <div class="d-flex justify-content-between align-items-center mt-auto gap-2">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary flex-grow-1">
                                <i class="fas fa-info-circle"></i> Details
                            </a>

                            <form asp-controller="Order" asp-action="AddProduct" method="post" class="d-flex align-items-center gap-2" style="width: 140px;">
                                <input type="hidden" name="ProductId" value="@product.Id" />
                                <input type="hidden" name="Name" value="@product.Name" />
                                <input type="hidden" name="ImageUrl" value="@product.ImageUrl" />
                                <input type="hidden" name="Price" value="@product.Price" />
                                <input type="number" name="Quantity" value="1" min="1" max="100" class="form-control form-control-sm" style="width: 60px;" />
                                <button type="submit" class="btn btn-outline-success">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-center mt-auto">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary w-100">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
