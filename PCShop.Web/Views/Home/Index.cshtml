@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 shadow rounded-4 p-5 bg-light">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <h1 class="display-4 fw-bold text-primary">Welcome to PC Shop</h1>
            <p class="lead text-muted">Discover the best PC components, configurations, and peripherals.</p>

            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg mt-3 shadow-sm">
                Start Browsing Products
            </a>
        </div>
    </div>
</div>

<div class="container mt-5">
    <h2 class="text-center fw-semibold mb-4">Explore Our Categories</h2>
    <div class="row text-center">
        <div class="col-lg-4 col-md-6 mb-4">
            <img src="~/images/pc-components.png" asp-append-version="true" class="img-fluid rounded-3 shadow-sm hover-zoom" alt="PC Components">
            <h5 class="mt-3 fw-bold">PC Components</h5>
            <p class="text-muted">Browse our wide selection of high-quality PC parts.</p>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <img src="~/images/pcs.jpg" asp-append-version="true" class="img-fluid rounded-3 shadow-sm hover-zoom" alt="PCs">
            <h5 class="mt-3 fw-bold">Prebuilt Configurations</h5>
            <p class="text-muted">Choose from powerful prebuilt computers.</p>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <img src="~/images/peripheries.jpg" asp-append-version="true" class="img-fluid rounded-3 shadow-sm hover-zoom" alt="Peripherals">
            <h5 class="mt-3 fw-bold">Gaming Peripherals</h5>
            <p class="text-muted">Find the best keyboards, mice, and headsets.</p>
        </div>
    </div>
</div>
