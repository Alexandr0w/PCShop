@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5 welcome-section shadow-card">
    <div class="row justify-content-center">
        <div class="col-md-8 col-sm-10 text-center">
            <h1 class="display-4">Welcome to PC Shop</h1>
            <p class="lead">Here you can find your PC components</p>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg mt-3">Start Searching Products</a>
        </div>
        <p>Тhis project is under construction...</p>
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 20%;"></div>
        </div>
    </div>
</div>

<div class="container mt-4 explore-section shadow-card">
    <h2 class="text-center section-title">Explore Products</h2>
    <div class="row mt-4">
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="~/images/pc-components.png" asp-append-version="true" class="img-fluid rounded hover-zoom" alt="PC Components">
            <h5 class="mt-3">Search your component</h5>
            <p>Here you can find PC components.</p>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="~/images/pcs.jpg" asp-append-version="true" class="img-fluid rounded hover-zoom" alt="Computers">
            <h5 class="mt-3">Check our configurations</h5>
            <p>Find the best PC configuration.</p>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="~/images/peripheries.jpg" asp-append-version="true" class="img-fluid rounded hover-zoom" alt="Peripheries">
            <h5 class="mt-3">Search your peripherie</h5>
            <p>Search for best gaming peripheries.</p>
        </div>
    </div>
</div>