@using PCShop.Web.ViewModels
@model ErrorViewModel

@{
    ViewData["Title"] = "Oops! Something went wrong";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body py-5">
            <div class="mb-4">
                <i class="bi bi-exclamation-triangle-fill text-warning display-1"></i>
            </div>

            <h1 class="display-4 text-danger mb-3">Oops! Something went wrong</h1>

            <p class="lead text-muted">
                We're sorry, but an unexpected error has occurred.<br />
                Please try again later or go back to the home page.
            </p>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg me-2">
                    <i class="bi bi-house-fill"></i> Back to Home
                </a>
                <a href="mailto:support@pcshop.com" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-envelope-fill"></i> Contact Support
                </a>
            </div>

            <div class="mt-4 small text-muted">
                Error ID: @ViewData["RequestId"]
            </div>
        </div>
    </div>
</div>
