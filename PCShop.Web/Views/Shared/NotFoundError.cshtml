@{
    ViewData["Title"] = "Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body py-5">
            <div class="mb-4">
                <i class="bi bi-question-circle-fill text-primary display-1"></i>
            </div>

            <h1 class="display-4 text-primary mb-3">404 - Page Not Found</h1>

            <p class="lead text-muted">
                Sorry, the page you are looking for doesn't exist, was removed, or is temporarily unavailable.
            </p>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                    <i class="bi bi-house-fill"></i> Return to Home
                </a>
            </div>
        </div>
    </div>
</div>
